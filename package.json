{
  "name": "node-zero-ws",
  "author": "archer zheng",
  "private": true,
  "version": "1.0.0",
  "description": "websocket 参考 maciejcieslar/scalable-websocket-nestjs 设计",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:local": "cross-env CONFIG_FOLDER=../config NODE_ENV=local PORT=5010 nest start --watch",
    "start:dev": "nest build && pm2 start --env dev",
    "start:prod": "nest build && pm2 start --env prod",
    "start:online": "node dist/main",
    "flush": "pm2 flush",
    "reload": "git pull && nest build && pm2 reload node-zero-ws"
  },
  "dependencies": {
    "@lvgithub/ctrip-apollo-client": "^1.0.13",
    "@nestjs/common": "7.4.2",
    "@nestjs/core": "7.4.2",
    "@nestjs/platform-express": "7.4.2",
    "@nestjs/platform-socket.io": "^7.4.2",
    "@nestjs/platform-ws": "7.4.2",
    "@nestjs/websockets": "7.4.2",
    "@types/ioredis": "^4.17.3",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33",
    "@types/socket.io-redis": "^1.0.26",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "ioredis": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "socket.io-redis": "^5.3.0",
    "ws": "7.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.1.1",
    "@nestjs/testing": "7.4.2",
    "@types/express": "4.17.7",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "12.12.31",
    "@types/supertest": "2.0.10",
    "@types/ws": "7.2.6",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "jest": "26.4.2",
    "prettier": "2.1.1",
    "supertest": "4.0.2",
    "ts-jest": "26.3.0",
    "ts-loader": "8.0.3",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.2"
  }
}
